<div class="column">
  <div class="card">
    <div class="card-content">

      <p class="subtitle is-4"><%= customer.full_name %></p>

      <% if customer.image.present? %>
        <div class="card">
          <div class="card-image">
            <figure class="image is-96x96">
              <%= image_tag customer.image %>
            </figure>
          </div>
        </div>
      <% end %>

      <strong><h3>Phone Number: <%= customer.phone_number %></h3></strong>
      <strong><h3>Email Address: <%= customer.email_address %></h3></strong>
      <strong><h3>Notes: <%= customer.notes %></h3></strong>
      <br>
    </div>
  </div>
</div>